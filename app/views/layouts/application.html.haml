!!!5
%html
  %head
    %title ="Blog"
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    
    %div.navbar.navbar-fixed-top
      %div.navbar-inner
        %div.container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
          
          %a.brand(href='#')
            %span.brand_koh
              Kohactive
            %span.brand_apprentice
              Apprentice Blog
              
          %div.nav-collapse
            %ul.nav
              - if current_user
                / %li
                /                   Logged In As: 
                /                   = current_user.email
                %li
                  = link_to "Log out", log_out_path
              - else
                %li
                  = link_to "Sign up", sign_up_path
                %li
                  = link_to "Log in", log_in_path
    
    
    %div.container
      %div.row
        %div.span6
          -flash.each do |name, msg|
            =content_tag :div, msg, :id => "flash_#{name}"
          = yield
        - if current_page?(root_path)
          %div.span3
            %h3
              Categories
              %ul
                %li
                  - @tags.each do |tag|
                    =tag.title
              